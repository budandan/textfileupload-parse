@model List<ImageUpload.Models.File>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            File Name
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.FilePath
        </td>
        <td>
            @Html.ActionLink("Go To Parse Menu", "ParseMenu", "Parser", new { id = item.FileID },new { @class = "btn btn-primary" })
            @Html.ActionLink("Delete", "Delete", "Files", new { id = item.FileID }, new { @class = "btn btn-danger"})
        </td>
    </tr>
}

</table>
